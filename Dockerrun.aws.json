{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "tristangva/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "tristangva/multi-server",
            "hostname": "http://api",
            "essential": false
        },
        {
            "name": "worker",
            "image":"tristangva/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "tristangva/multi-nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
             "links": [
                 "client",
                 "server"
             ]
        }
    ]
}